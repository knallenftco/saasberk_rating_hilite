-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th#title_header{:class => ("hilite" if @sort_var=="title")}=link_to "Movie Title", :id => "title_header", :sort => "title"
      %th Rating
      %th#release_date_header{:class => ("hilite" if @sort_var=="release_date")}= link_to "Release Date", :sort => "release_date"#, :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
